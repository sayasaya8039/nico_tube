{
  "$schema": "https://claude.ai/schemas/settings.json",
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(pip *)",
      "Bash(python *)",
      "Bash(node *)",
      "Bash(bun *)",
      "Bash(gh *)",
      "Bash(wrangler *)",
      "Bash(code *)",
      "Bash(cursor *)",
      "Bash(cargo *)",
      "Bash(rustc *)",
      "Bash(go *)",
      "Bash(pyinstaller *)",
      "Bash(pytest *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(tsc *)",
      "Bash(vitest *)",
      "Bash(jest *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm -r *)",
      "Bash(rm -rf node_modules*)",
      "Bash(rm -rf dist*)",
      "Bash(rm -rf build*)",
      "Bash(rm -rf .next*)",
      "Bash(rm -rf __pycache__*)",
      "Bash(rm *.pyc)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(gh *)"
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "NotebookEdit",
      "TodoWrite"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(> /dev/sda)",
      "Bash(:(){:|:&};:)",
      "Bash(mkfs*)",
      "Bash(dd if=*)"
    ]
  },
  "env": {
    "LANG": "ja_JP.UTF-8"
  }
}
